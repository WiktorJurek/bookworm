{% extends 'base.html.twig' %}

{% block title %}Bookworm login{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3 text-center">
                            You are logged in as <strong>{{ app.user.userIdentifier }}</strong>,
                            <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal text-center">Bookworm</h1>

                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Remember Me functionality (optional) #}
                    {#
                    <div class="form-group form-check">
                        <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                        <label class="form-check-label" for="_remember_me">Remember me</label>
                    </div>
                    #}

                    <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Sign in</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
