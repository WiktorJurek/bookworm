{# templates/book/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} - Details{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                {% if book.cover %}
                    {% if book.cover starts with 'http' or book.cover starts with 'https' %}
                        <img src="{{ book.cover }}" class="img-fluid" alt="{{ book.title }}">
                    {% else %}
                        <img src="{{ asset('uploads/images/' ~ book.cover) }}" class="img-fluid" alt="{{ book.title }}">
                    {% endif %}
                {% else %}
                    <img src="https://via.placeholder.com/300x450" class="img-fluid" alt="No cover image">
                {% endif %}
            </div>
            <div class="col-md-8">
                <h1 class="mb-3">{{ book.title }}</h1>
                <p class="lead"><strong>Autor:</strong> {{ book.author }}</p>
                <p><strong>Data publikacji:</strong> {{ book.year }}</p>
                <p><strong>Opis:</strong></p>
                <p>{{ book.description|striptags }}</p>
                <a href="{{ path('app_book_list') }}" class="btn btn-primary">Powrót do listy książek</a>
            </div>
        </div>
    </div>

{% endblock %}
